$ const colors = input.colors;

<div.color-picker-footer>
  <div.color-picker-selection-container>
    <for|color| of=colors>
      <div>
        <color-picker-selection
          color=color
          on-color-selected('handleColorSelected', color)
        />
      </div>
    </for>
    <input
      key="hexInput"
      placeholder="Hex Value"
      on-input('handleHexInput')
    />
  </div>
</div>