// Inline styles
style {
  .color-picker-header {
    width: 200px;
    height: 100px;
    border-radius: 20px 20px 0 0;
    font: 30px Arial;
    display: flex;
    flex-direction: column;
    text-align: center;
    color: white;
  }
  .color-picker-header > p {
    padding-top: 1.15em;
    margin: 0;
  }
}

$ const color = input.color;

<!-- markup -->
<div.color-picker-header style={background: color}>
  <p>${color}</p>
</div>
